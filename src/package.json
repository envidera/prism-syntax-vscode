{
    "name": "prism-syntax",
    "displayName": "Envidera Prism Syntax",
    "description": "Prism syntax highlighting for VSCode.",
    "version": "0.1.6",
    "license": "MIT",
    "publisher": "envidera",
    "icon": "./img/prism-icon-128x128px.png",
    "author": {
        "name": "Andrio Stark",
        "email": "anstk@envidera.com"
    },
    "engines": {
        "vscode": "^1.91.0"
    },
    "homepage": "https://github.com/envidera/prism-syntax-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/envidera/prism-syntax-vscode.git"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "envidera",
        "prism",
        "syntax"
    ],
    "contributes": {
        "languages": [
            {
                "id": "prism",
                "aliases": [
                    "Prism",
                    "prism"
                ],
                "extensions": [
                    ".prism"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "prism-markdown"
            }
        ],
        "grammars": [
            {
                "language": "prism",
                "scopeName": "source.prism",
                "path": "./syntaxes/prism.tmLanguage.json"
            },
            {
                "language": "prism-markdown",
                "scopeName": "markdown.prism.codeblock",
                "path": "./syntaxes/prism-markdown.json",
                "injectTo": [
                    "text.html.markdown"
                ],
                "embeddedLanguages": {
                    "meta.embedded.block.prism": "prism"
                }
            }
        ],
        "": "UI Settings for invalidCharacterColor",
        "-": "-------------------------------------------------",
        "configuration": {
            "title": "Prism",
            "properties": {
                "prism.invalidCharacterColor": {
                    "type": "string",
                    "default": "#ff0000",
                    "markdownDescription": "Highlight invalid characters `{`, `}`, and `;` with a color."
                }
            }
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "start": "node ./out/extension.js",
        "build": "tsc --project ./"
    }
}